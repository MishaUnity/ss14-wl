<Control Name="CRecordsTab" xmlns="https://spacestation14.io"
         xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client">
    <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True">
        
        <ScrollContainer HScrollEnabled="False" VerticalExpand="True">
            <BoxContainer Orientation="Vertical" VerticalExpand="True">
                
                <PanelContainer StyleClasses="AngleRect" HorizontalExpand="True" Margin="0 0 0 5">
                    <BoxContainer Orientation="Vertical" Margin="5">
                        <Label Text="{Loc 'records-medical'}" StyleClasses="LabelBig" FontColorOverride="#2196F3"/>
                        <PanelContainer StyleClasses="Inset" Margin="0 5 0 0" HorizontalExpand="True">
                            <PanelContainer.PanelOverride>
                                <graphics:StyleBoxFlat BackgroundColor="#1E1E1E" ContentMarginLeftOverride="5" ContentMarginBottomOverride="5"/>
                            </PanelContainer.PanelOverride>
                            <TextEdit Name="MedicalRecordInput" Access="Public"
                                      MinSize="200 150" HorizontalExpand="True"
                                      Margin="0" VerticalExpand="True"/>
                        </PanelContainer>
                    </BoxContainer>
                </PanelContainer>

                <PanelContainer StyleClasses="AngleRect" HorizontalExpand="True" Margin="0 0 0 5">
                    <BoxContainer Orientation="Vertical" Margin="5">
                        <Label Text="{Loc 'records-security'}" StyleClasses="LabelBig" FontColorOverride="#F44336"/>
                        <PanelContainer StyleClasses="Inset" Margin="0 5 0 0" HorizontalExpand="True">
                            <PanelContainer.PanelOverride>
                                <graphics:StyleBoxFlat BackgroundColor="#1E1E1E" ContentMarginLeftOverride="5" ContentMarginBottomOverride="5"/>
                            </PanelContainer.PanelOverride>
                            <TextEdit Name="SecurityRecordInput" Access="Public"
                                      MinSize="200 150" HorizontalExpand="True"
                                      Margin="0" VerticalExpand="True"/>
                        </PanelContainer>
                    </BoxContainer>
                </PanelContainer>

                <PanelContainer StyleClasses="AngleRect" HorizontalExpand="True" Margin="0 0 0 5">
                    <BoxContainer Orientation="Vertical" Margin="5">
                        <Label Text="{Loc 'records-employment'}" StyleClasses="LabelBig" FontColorOverride="#4CAF50"/>
                        <PanelContainer StyleClasses="Inset" Margin="0 5 0 0" HorizontalExpand="True">
                            <PanelContainer.PanelOverride>
                                <graphics:StyleBoxFlat BackgroundColor="#1E1E1E" ContentMarginLeftOverride="5" ContentMarginBottomOverride="5"/>
                            </PanelContainer.PanelOverride>
                            <TextEdit Name="EmploymentRecordInput" Access="Public"
                                      MinSize="200 150" HorizontalExpand="True"
                                      Margin="0" VerticalExpand="True"/>
                        </PanelContainer>
                    </BoxContainer>
                </PanelContainer>
                
            </BoxContainer>
        </ScrollContainer>
        
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Margin="0 5 0 0">
            <Button Name="MedicalTemplateButton" Text="{Loc 'records-template-medical'}" HorizontalExpand="True" Margin="0 0 2 0"/>
            <Button Name="SecurityTemplateButton" Text="{Loc 'records-template-security'}" HorizontalExpand="True" Margin="2 0 2 0"/>
            <Button Name="EmploymentTemplateButton" Text="{Loc 'records-template-employment'}" HorizontalExpand="True" Margin="2 0 0 0"/>
        </BoxContainer>
        
    </BoxContainer>
</Control>
